@model IEnumerable<WorldWideImporters.Models.ViewModels.PersonDashboardVM>

@{
    ViewBag.Title = "Home";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <p>Please enter a name to be searched</p>
    @Html.TextBox("InputName", "", new { @class = "form-control", @placeholder = "Search Name..", @type = "search" })
    <button type="submit" class="btn btn-default" style=" bottom: 0%;" )>Submit</button>
}


@if (Model?.PersonResults != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Names that match your search:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.PersonResults)
            {
               <tr>
                   <td>@Html.ActionLink(person.Name, "Details","Home", routeValues: new {result = person.Name}, htmlAttributes: null</td>
               </tr>
            }
        </tbody>
    </table>
}