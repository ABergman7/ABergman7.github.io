@model WorldWideImporters.Models.ViewModels.PersonDashboardVM

@{
    ViewBag.Title = "Home";
}
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<div class="row">
    <div class="col-md-12">
        <div class="content">
            <div class="searchbar">
                <h3 class="text-center">Client Search</h3>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Search Name..", @type = "search" })
                <button type="submit" class="btn-primary button btn" )>Search</button>
            </div>
        </div>
    </div>
</div>
}


@if (Model?.PersonResults != null)
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Names that match your search:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.PersonResults)
            {
                <tr>
                    <td>@Html.ActionLink(@person.Name, "Details", "Home", new { result = person.Name }, null)</td>
                </tr>
            }
        </tbody>
    </table>

}