@model IEnumerable<Auction.Models.Bid>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Reginald's Ancient Antiquities Auction House</h1>
   
    
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Create a Bid!</h2>
        <p><a class="btn btn-default" @Html.ActionLink("Bid", "Create", "Bids")</p>
    </div>
</div>



<div class="row">
    <div class="col-md-5">
        <h4>Recent Bidding</h4>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ItemID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Itemname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Buyer.Buyername)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>
                <th></th>
            </tr>
            <tbody>
            @foreach (var bid in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => bid.ItemID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bid.Item.Itemname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bid.Buyer.Buyername)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => bid.Price)
                    </td>
                    <td>
                        @if (bid.Timestamp.Date == DateTime.Today)
                        {
                            DateTime todayTime = bid.Timestamp;
                            @todayTime.ToString("h:mm:ss tt")
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => bid.Timestamp)
                        }

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>